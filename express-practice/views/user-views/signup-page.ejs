<div class="views-body">

  <h2> SIGN UP </h2>

  <% if (currentUser) { %>

    <br />

    <b> <%= currentUser.userName %> </b>

  <% } %>

  <% if (typeof errorMessage !== "undefined") { %>
  <p class="error-message"> <%= errorMessage %> </p>
  <% } %>

  <form id="form" method="post" action="/process-signup">

    <label for="username-input"></label>
    <input id="username-input" type="text" placeholder="Username" name="signupUsername" />

    <br />
    <br />

    <labe for="email-input"></labe>
    <input id="email-input" type="email" placeholder="Email" name="signupEmail"  />

    <br />

    <label for="password-input"></label>
    <input id="password-input" type="password" placeholder="Password" name="signupPassword" />

    <br />
    <br />

    <button> Submit </button>

    <br />
    <br />

  </form>

</div>
